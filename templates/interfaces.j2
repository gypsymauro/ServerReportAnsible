# This file describes the network interfaces available on your system
# and how to activate them. For more information, see interfaces(5).

source /etc/network/interfaces.d/*

# The loopback network interface
auto lo
iface lo inet loopback

{% if ansible_eth0.ipv4.address == inventory_hostname %}
  {% set ip_address = ansible_eth0.ipv4.address %}
{% else %}
  {% set ip_address = ansible_eth0.ipv4.address %}
{% endif %}

# The primary network interface
#allow-hotplug eth0

# The primary network interface
iface {{ iface }} inet static
      address {{ ip_address }}
      netmask 255.255.255.0
      broadcast 192.168.64.254
      gateway 192.168.64.254
      dns-nameservers 192.168.64.10 192.168.64.16
      dns-search rivadg.sede.comune.rivadelgarda.tn.it
